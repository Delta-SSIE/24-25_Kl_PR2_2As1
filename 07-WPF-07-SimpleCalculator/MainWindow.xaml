<Window x:Class="_07_WPF_07_SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPF_07_SimpleCalculator"
        mc:Ignorable="d"
        Title="Simple Calculator" Height="450" Width="350"
        x:Name="CalcWindow"
        >
    <Window.Resources>
        <Thickness x:Key="baseMargin">3pt</Thickness>

        <Style x:Key="baseBtnStyle" TargetType="Button">
            <Setter Property="Margin" Value="{StaticResource baseMargin}" />
            <Setter Property="FontSize" Value="18pt" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Black" />
        </Style>

        <Style x:Key="aCBtnStyle" TargetType="Button" BasedOn="{StaticResource baseBtnStyle}">
            <Setter Property="Background" Value="Red" />
        </Style>
        <Style x:Key="numBtnStyle" TargetType="Button" BasedOn="{StaticResource baseBtnStyle}">
            <Setter Property="Background" Value="Green" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="DisplayTB"
                 Text="{Binding ElementName=CalcWindow, Path=DisplayNumber}"
                 Grid.Column="0"
                 Grid.Row="0"
                 Grid.ColumnSpan="4"
                 FontFamily="Consolas"
                 FontSize="60pt"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True" 
                 Margin="{StaticResource baseMargin}"
                 />

        <Button x:Name="ACBtn"
                Content="AC"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource aCBtnStyle}"       
                Click="ACBtn_Click"
                />

        <Button x:Name="PlusMinusBtn"
                Content="+/−"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource baseBtnStyle}"
                Click="PlusMinusBtn_Click"
                />

        <Button x:Name="PercentBtn"
                Content="%"
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource baseBtnStyle}" Click="PercentBtn_Click"               
                />

        <Button x:Name="DivideBtn"
                Content="/"
                Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource baseBtnStyle}"               
                />

        <Button x:Name="SevenBtn"
                Content="7"
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource numBtnStyle}"  
                Click="NumBtn_Click"
                />

        <Button x:Name="EightBtn"
                Content="8"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="NineBtn"
                Content="9"
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="MultiplyBtn"
                Content="×"
                Grid.Row="2"
                Grid.Column="3"
                Style="{StaticResource baseBtnStyle}"                               
                />

        <Button x:Name="FourBtn"
                Content="4"
                Grid.Row="3"
                Grid.Column="0"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="FiveBtn"
                Content="5"
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="SixBtn"
                Content="6"
                Grid.Row="3"
                Grid.Column="2"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="MinusBtn"
                Content="−"
                Grid.Row="3"
                Grid.Column="3"
                Style="{StaticResource baseBtnStyle}"               
                />

        <Button x:Name="OneBtn"
                Content="1"
                Grid.Row="4"
                Grid.Column="0"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="TwoBtn"
                Content="2"
                Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="ThreeBtn"
                Content="3"
                Grid.Row="4"
                Grid.Column="2"
                Style="{StaticResource numBtnStyle}"               
                Click="NumBtn_Click"
                />

        <Button x:Name="PlusBtn"
                Content="+"
                Grid.Row="4"
                Grid.Column="3"
                Style="{StaticResource baseBtnStyle}"               
                />

        <Button x:Name="ZeroBtn"
                Content="0"
                Grid.Row="5"
                Grid.Column="0"
                Style="{StaticResource numBtnStyle}"
                Click="NumBtn_Click"
                />

        <Button x:Name="DotBtn"
                Content="."
                Grid.Row="5"
                Grid.Column="1"
                Style="{StaticResource baseBtnStyle}"  
                Click="DotBtn_Click"
                />

        <Button x:Name="EqualsBtn"
                Content="="
                Grid.Row="5"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Style="{StaticResource baseBtnStyle}"               
                />


    </Grid>
</Window>
